---
const path = Astro.url.pathname;
const isActive = (href: string) => (path === href ? "current-menu-item" : "");
---

<header id="pq-header" class="pq-header-style-3">
  <div class="pq-top-header top-style-1">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="pq-top-right">
            <div class="pq-header-time">
              <ul>
                <li>
                  <i class="ti-timer"></i>
                  <span>Mon to Fri 9:00 am â€“ 6:00 pm</span>
                </li>
              </ul>
            </div>
            <div class="pq-header-social">
              <ul>
                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                <li><a href="#"><i class="fab fa-skype"></i></a></li>
                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="col-md-6 text-right">
          <div class="pq-header-contact text-right">
            <ul>
              <li>
                <a href="tel:+919879791993">
                  <i class="fas fa-phone"></i>
                  <span> +91 98797 91993</span>
                </a>
              </li>
              <li>
                <a href="mailto:info@fionexim.com">
                  <i class="fas fa-envelope"></i>
                  <span>info@fionexim.com</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pq-bottom-header">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="/">
              <img
                class="img-fluid logo"
                src="/images/Logo/fion-logo.png"
                alt="FionExim"
              />
            </a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <div id="pq-menu-contain" class="pq-menu-contain">
                <ul id="pq-main-menu" class="navbar-nav ml-auto">
                  <li class={`menu-item ${isActive("/")}`}>
                    <a href="/">Home</a>
                  </li>
                  <li class={`menu-item ${isActive("/about")}`}>
                    <a href="/about-us">About</a>
                  </li>
                  <li class={`menu-item ${isActive("/products")}`}>
                    <a href="/products">Products</a>
                  </li>

                  <li class={`menu-item ${isActive("/gallery")}`}>
                    <a href="/gallery">Gallery</a>
                  </li>

                  <li class={`menu-item ${isActive("/contact")}`}>
                    <a href="/contact">Contact</a>
                  </li>
                </ul>
              </div>
            </div>

            <div class="pq-btn-container">
              <a
                href="https://drive.google.com/file/d/1yihiLk9vaUPZl5-OpqStC1r1hgdG_Mvx/view?usp=sharing"
                target="_blank"
                class="pq-button pq-button-flat"
              >
                <div class="pq-button-block">
                  <span class="pq-button-text">Download Brochure</span>
                  <span class="pq-button-line-right"></span>
                  <i class="ion ion-ios-arrow-right"></i>
                </div>
              </a>
            </div>

            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <i class="fas fa-bars"></i>
            </button>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
